<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wanghuan.blogserver.dao.ArticleDao">

    <resultMap type="com.wanghuan.blogserver.entity.Article" id="ArticleMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="title" column="title" jdbcType="VARCHAR"/>
        <result property="mdContent" column="mdContent" jdbcType="VARCHAR"/>
        <result property="htmlContent" column="htmlContent" jdbcType="VARCHAR"/>
        <result property="summary" column="summary" jdbcType="VARCHAR"/>
        <result property="cid" column="cid" jdbcType="INTEGER"/>
        <result property="uid" column="uid" jdbcType="INTEGER"/>
        <result property="publishDate" column="publishDate" jdbcType="TIMESTAMP"/>
        <result property="editTime" column="editTime" jdbcType="TIMESTAMP"/>
        <result property="state" column="state" jdbcType="INTEGER"/>
        <result property="pageView" column="pageView" jdbcType="INTEGER"/>
    </resultMap>

    <resultMap id="BaseResultMap" type="com.wanghuan.blogserver.entity.Article">
        <id column="id" property="id"/>
        <result column="title" property="title"/>
        <result column="cid" property="cid"/>
        <result column="uid" property="uid"/>
        <result column="publishDate" property="publishDate"/>
        <result column="editTime" property="editTime"/>
        <result column="state" property="state"/>
        <result column="pageView" property="pageView"/>
        <result column="mdContent" property="mdContent"/>
        <result column="htmlContent" property="htmlContent"/>
        <result column="summary" property="summary"/>
        <result column="nickname" property="nickname"/>
        <result column="cateName" property="cateName"/>
        <collection property="tags" ofType="com.wanghuan.blogserver.entity.Tags" column="tagName">
            <id property="id" column="tid"/>
            <result property="tagName" column="tagName"/>
        </collection>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="ArticleMap">
        select
          id, title, mdContent, htmlContent, summary, cid, uid, publishDate, editTime, state, pageView
        from vueblog.article
        where id = #{id}
    </select>
    <select id="getArticleById" parameterType="Integer" resultMap="BaseResultMap">
        SELECT a.*,t.`tagName`,t.`id` AS tid,u.`nickname`,c.`cateName` FROM article a LEFT JOIN article_tags ats ON a.`id`=ats.`aid` LEFT JOIN tags t ON ats.`tid`=t.`id` LEFT JOIN user u ON a.`uid`=u.`id` LEFT JOIN category c ON a.`cid`=c.`id` WHERE a.id=#{aid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="ArticleMap">
        select
          id, title, mdContent, htmlContent, summary, cid, uid, publishDate, editTime, state, pageView
        from vueblog.article
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="ArticleMap">
        select
          id, title, mdContent, htmlContent, summary, cid, uid, publishDate, editTime, state, pageView
        from vueblog.article
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="title != null and title != ''">
                and title = #{title}
            </if>
            <if test="mdcontent != null and mdcontent != ''">
                and mdContent = #{mdcontent}
            </if>
            <if test="htmlcontent != null and htmlcontent != ''">
                and htmlContent = #{htmlcontent}
            </if>
            <if test="summary != null and summary != ''">
                and summary = #{summary}
            </if>
            <if test="cid != null">
                and cid = #{cid}
            </if>
            <if test="uid != null">
                and uid = #{uid}
            </if>
            <if test="publishdate != null">
                and publishDate = #{publishdate}
            </if>
            <if test="edittime != null">
                and editTime = #{edittime}
            </if>
            <if test="state != null">
                and state = #{state}
            </if>
            <if test="pageview != null">
                and pageView = #{pageview}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="addNewArticle" parameterType="com.wanghuan.blogserver.entity.Article" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO article SET title=#{title},mdContent=#{mdContent},htmlContent=#{htmlContent},summary=#{summary},cid=#{cid},uid=#{uid},publishDate=#{publishDate},state=#{state},editTime=#{editTime}
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update vueblog.article
        <set>
            <if test="title != null and title != ''">
                title = #{title},
            </if>
            <if test="mdcontent != null and mdcontent != ''">
                mdContent = #{mdcontent},
            </if>
            <if test="htmlcontent != null and htmlcontent != ''">
                htmlContent = #{htmlcontent},
            </if>
            <if test="summary != null and summary != ''">
                summary = #{summary},
            </if>
            <if test="cid != null">
                cid = #{cid},
            </if>
            <if test="uid != null">
                uid = #{uid},
            </if>
            <if test="publishdate != null">
                publishDate = #{publishdate},
            </if>
            <if test="edittime != null">
                editTime = #{edittime},
            </if>
            <if test="state != null">
                state = #{state},
            </if>
            <if test="pageview != null">
                pageView = #{pageview},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from vueblog.article where id = #{id}
    </delete>

    <select id="getArticleByState" resultType="com.wanghuan.blogserver.entity.Article">
        SELECT a.id,a.`title`,a.`editTime`,a.`pageView`,a.`state`,u.`nickname`,c.`cateName`,a.uid FROM article a,user
        u,category c WHERE a.`cid`=c.`id` AND a.`uid`=u.`id`
        <if test="state!=-2">
            and a.uid=#{uid}
        </if>
        <if test="state!=-1 and state!=-2">
            and a.state=#{state}
        </if>
        <if test="state==-2">
            and a.state=1
        </if>
        <if test="keywords!=null">
            AND title LIKE concat('%',#{keywords},'%')
        </if>
        ORDER BY a.editTime DESC limit #{offset},#{limit};
    </select>
    <select id="getArticleByStateByAdmin" resultType="com.wanghuan.blogserver.entity.Article">
        SELECT a.id,a.`title`,a.`editTime`,a.`pageView`,a.`state`,u.`nickname`,c.`cateName`,a.uid FROM article a,user
        u,category c WHERE a.`cid`=c.`id` AND a.`uid`=u.`id` and a.state=1
        <if test="keywords!=null">
            AND title LIKE concat('%',#{keywords},'%')
        </if>
        ORDER BY a.editTime DESC limit #{offset},#{limit};
    </select>
    <select id="getArticleCountByState" resultType="int">
        SELECT count(*) FROM article
        <where>
            <if test="state!=-1">
                AND state=#{state}
            </if>
            <if test="uid!=null">
                AND uid=#{uid}
            </if>
            <if test="keywords!=null">
                AND title LIKE concat('%',#{keywords},'%')
            </if>
        </where>
    </select>
</mapper>